<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Clientes</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Lista de Clientes</h1>
    <p>Clientes cadastrados no sistema.</p>
    <table style="width:50%">
      <thead>
        <tr style="background-color:#CCC">
          <td style="width:50%">Nome</td>
          <td style="width:15%">Idade</td>
          <td style="width:15%">UF</td>
          <td>Ações</td>
        </tr>
      </thead>
      <tbody>
        <% if(!docs || docs.length == 0){ %>
        <tr>
          <td colspan="4">Nenhum cliente cadastrado</td>
        </tr>
        <% } else{ docs.forEach(function(customer){%>
          <tr>
            <td style="width:50%"><%= customer.nome %></td>
            <td style="width:50%"><%= customer.idade %></td>
            <td style="width:50%"><%= customer.uf %></td>
            <td><a href="/edit/<%= customer._id%>">Editar</a>
                <a href="/delete/<%= customer._id%>" onclick="return confirm('Tem certeza?');">Excluir</a> </td>
          </tr>
        <% })}%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            <a href="/new">Novo Cadastro</a>
          </td>
        </tr>
      </tfoot>
    </table>
    <script>
      if(location.href.indexOf('delete=true')!=-1){
        alert('Cliente excluído com sucesso!');
      }else if(location.href.indexOf('edit=true')!=-1){
        alert('Cliente editado com sucesso!');
      }if(location.href.indexOf('new=true')!=-1){
        alert('Cliente cadastrado com sucesso!');
      }
    </script>
  </body>
</html>